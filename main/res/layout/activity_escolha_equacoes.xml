<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".EscolhaEquacoesActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="401dp"
        android:layout_height="249dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="352dp"
        android:layout_height="160dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <Button
            android:id="@+id/btnSegundoGrau"
            android:layout_width="176dp"
            android:layout_height="165dp"
            android:background="#4CAF50"
            android:text="Equação do 2° Grau" />

        <Button
            android:id="@+id/btnTipoTriangulo"
            android:layout_width="176dp"
            android:layout_height="165dp"
            android:background="#D5E4258D"
            android:text="Tipo de triângulo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="160dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btnCPF"
            android:layout_width="176dp"
            android:layout_height="165dp"
            android:background="#D7E67518"
            android:text="Verificar CPF" />

        <Button
            android:id="@+id/btnSobre"
            android:layout_width="176dp"
            android:layout_height="165dp"
            android:background="#DDB70FD5"
            android:text="Sobre" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>